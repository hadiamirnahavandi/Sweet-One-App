<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="65dp">
<TextView
android:id="@+id/lbl_role_systemuser_fid_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Role_systemuser_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_role_systemuser_fid_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Role_systemuser_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_role_systemuser_fid_caption"
/>
<TextView
android:id="@+id/lbl_request_date_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_role_systemuser_fid_caption"
android:text="Request_date:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_request_date_content"
android:layout_width="wrap_content"
