android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_request_date_caption"
/>
<TextView
android:id="@+id/lbl_price_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_request_date_caption"
android:text="Price:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_price_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_request_date_content"
