android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_commit_date_caption"
/>
<TextView
android:id="@+id/lbl_committype_fid_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_commit_date_caption"
android:text="Committype_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_committype_fid_content"
