<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<TextView
android:id="@+id/file_flulabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="File_flu:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/file_flu"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="File_flu"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/file_flulabel"
/>
<TextView
android:id="@+id/titlelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/file_flulabel"
android:text="Title:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/file_flulabel"
android:text="Title"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/titlelabel"
/>
<TextView
android:id="@+id/thumbnail_flulabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Thumbnail_flu:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/thumbnail_flu"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Thumbnail_flu"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/thumbnail_flulabel"
/>
<TextView
android:id="@+id/add_datelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/thumbnail_flulabel"
android:text="Add_date:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/add_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/thumbnail_flulabel"
android:text="Add_date"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/add_datelabel"
/>
<TextView
android:id="@+id/descriptionlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/add_datelabel"
android:text="Description:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/description"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/add_datelabel"
android:text="Description"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/descriptionlabel"
/>
<TextView
android:id="@+id/pricelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/descriptionlabel"
android:text="Price:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/price"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/descriptionlabel"
android:text="Price"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/pricelabel"
/>
<TextView
android:id="@+id/filecountlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/pricelabel"
android:text="Filecount:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/filecount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/pricelabel"
android:text="Filecount"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/filecountlabel"
/>
<TextView
android:id="@+id/role_systemuser_fidlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/filecountlabel"
android:text="Role_systemuser_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/role_systemuser_fid"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/filecountlabel"
android:text="Role_systemuser_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/role_systemuser_fidlabel"
/>        
</RelativeLayout>
</android.support.v7.widget.CardView>