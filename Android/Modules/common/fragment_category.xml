<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<TextView
android:id="@+id/titlelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Title:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Title"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/titlelabel"
/>
<TextView
android:id="@+id/latintitlelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Latintitle:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/latintitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Latintitle"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/latintitlelabel"
/>
<TextView
android:id="@+id/category_fidlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/latintitlelabel"
android:text="Category_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/category_fid"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/latintitlelabel"
android:text="Category_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/category_fidlabel"
/>        
</RelativeLayout>
</android.support.v7.widget.CardView>