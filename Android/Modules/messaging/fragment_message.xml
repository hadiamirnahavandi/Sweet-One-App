<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<TextView
android:id="@+id/sender_role_systemuser_fidlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Sender_role_systemuser_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/sender_role_systemuser_fid"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Sender_role_systemuser_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/sender_role_systemuser_fidlabel"
/>
<TextView
android:id="@+id/receiver_role_systemuser_fidlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/sender_role_systemuser_fidlabel"
android:text="Receiver_role_systemuser_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/receiver_role_systemuser_fid"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/sender_role_systemuser_fidlabel"
android:text="Receiver_role_systemuser_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/receiver_role_systemuser_fidlabel"
/>
<TextView
android:id="@+id/send_datelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/receiver_role_systemuser_fidlabel"
android:text="Send_date:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/send_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/receiver_role_systemuser_fidlabel"
android:text="Send_date"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/send_datelabel"
/>
<TextView
android:id="@+id/titlelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/send_datelabel"
android:text="Title:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/send_datelabel"
android:text="Title"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/titlelabel"
/>
<TextView
android:id="@+id/messagetextlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Messagetext:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/messagetext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/titlelabel"
android:text="Messagetext"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/messagetextlabel"
/>        
</RelativeLayout>
</android.support.v7.widget.CardView>